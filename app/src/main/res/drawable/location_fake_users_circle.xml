<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/width_35"
                android:height="@dimen/width_35" />
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke
                android:width="@dimen/width_10"
                android:color="@android:color/transparent" />
            <solid android:color="@color/colorGreenNew" />
            <size
                android:width="@dimen/width_25"
                android:height="@dimen/width_25" />
        </shape>
    </item>
</layer-list>