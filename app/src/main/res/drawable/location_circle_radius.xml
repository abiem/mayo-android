<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger Light blue circle in back -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:centerColor="@color/colorLightBlueTransparent"
                android:centerX="75%"
                android:centerY="75%"
                android:endColor="@color/colorLightBlueTransparent"
                android:startColor="@color/colorLightBlueTransparent"
                android:type="linear" />
            <size
                android:width="@dimen/width_25"
                android:height="@dimen/width_25" />
        </shape>
    </item>
    <!-- Smaller white circle in front -->
    <item>
        <shape android:shape="oval">

            <gradient
                android:angle="270"
                android:centerColor="@color/colorWhiteTransparent"
                android:centerX="75%"
                android:centerY="75%"
                android:endColor="@color/colorWhiteTransparent"
                android:startColor="@color/colorWhiteTransparent" />
            <size
                android:width="@dimen/width_25"
                android:height="@dimen/width_25" />
        </shape>
    </item>
</layer-list>