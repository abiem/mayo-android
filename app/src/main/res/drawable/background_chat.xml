<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDefaultGrey" />
        </shape>
    </item>

    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"
                android:color="@color/colorLightGrey" />
        </shape>
    </item>

</layer-list>